<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textviewDeco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.PostDonation.PostDonationFragment">

    <ImageView
        android:id="@+id/imageViewPostDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPostDonationDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/imageViewPostDonation"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postDonationDescEditText"
        android:layout_width="257dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPostDonationDesc" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="255dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/imageViewPostDonation"
        app:layout_constraintTop_toBottomOf="@+id/postDonationDescEditText" />

    <ImageButton
        android:id="@+id/postDonationImageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/postDonationDescEditText" />

    <Button
        android:id="@+id/postDonationButton"
        android:layout_width="71dp"
        android:layout_height="38dp"
        android:layout_marginEnd="14dp"
        android:text="post"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>